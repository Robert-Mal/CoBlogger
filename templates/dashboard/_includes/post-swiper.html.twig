<div class="flex flex-col gap-2 w-full">
    <p class="text-gray-400 uppercase">{{ section_title }} ({{ posts|length }})</p>
    <div class="swiper relative flex items-center overflow-hidden">
        <div class="swiper-wrapper flex">
            {% for post in posts %}
                <div class="swiper-slide">
                    <a href="{{ path('post_read', {id: post.id}) }}"
                       class="flex w-128 h-36 duration-150 filter hover:brightness-90 hover:bg-gray-100">
                        {% if post.imagePath %}
                            <img src="{{ asset(post.imagePath) }}"
                                 alt="" class="h-36 w-36 object-cover">
                        {% else %}
                            <div class="flex flex-col justify-center items-center h-36 w-36">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                     stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                          d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z"/>
                                </svg>
                                <p class="text-sm">No Image</p>
                            </div>
                        {% endif %}
                        <div class="flex flex-col justify-center gap-2 h-full p-2 overflow-hidden">
                            <p class="text-gray-400 uppercase">{{ post.category }}</p>
                            <p>{{ post.title }}</p>
                            <div class="flex gap-2">
                                {% if post.user.avatarPath %}
                                    <img src="{{ asset(post.user.avatarPath) }}" alt="Profile Avatar"
                                         class="h-6 w-6 rounded-full">
                                {% else %}
                                    <span class="h-6 w-6 rounded-full bg-royal-blue"></span>
                                {% endif %}
                                <p>{{ post.user.username }}</p>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
        <div class="swiper-button-prev absolute left-0 flex justify-center items-center h-8 w-8 rounded-full shadow bg-white">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="3"
                 stroke="currentColor"
                 class="w-4 h-4">
                <path stroke-linecap="round" stroke-linejoin="round"
                      d="M15.75 19.5L8.25 12l7.5-7.5"/>
            </svg>
        </div>
        <div class="swiper-button-next absolute right-0 flex justify-center items-center h-8 w-8 rounded-full shadow bg-white">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="3"
                 stroke="currentColor"
                 class="w-4 h-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5"/>
            </svg>
        </div>
    </div>
</div>