<nav class="flex w-full px-24 py-3 border-b-[0.1rem] border-gray-100 font-poppins">
    <div class="flex items-center gap-5">
        <div class="w-8 h-8 rounded-full bg-royal-blue"></div>
        <a href="{{ path('app_dashboard') }}" class="font-semibold text-lg">CoBlogger</a>
    </div>
    <div class="flex flex-grow justify-end items-center gap-5">
        <form class="relative" method="post" action="{{ path('app_search') }}">
            <label>
                <input type="text" name="search" placeholder="Search" autocomplete="off"
                       class="search-input flex items-center pl-10 pr-5 py-1 rounded-full shadow bg-gray-200 w-96"/>
            </label>
            <button type="submit" class="absolute left-2 top-1.5">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                     stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round"
                          d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z"/>
                </svg>
            </button>
            <div class="results absolute flex flex-col w-96 bg-white top-10 shadow rounded overflow-hidden z-20">
            </div>
        </form>
        {% if app.user %}
            <a href="{{ path('post_create') }}"
               class="px-8 py-2 text-sm rounded-full bg-royal-blue text-white hover:bg-royal-blue-400">
                Write
            </a>
            <div class="h-full w-[0.1rem] rounded-full bg-gray-200"></div>
            <div class="flex items-center gap-2">
                <div class="w-9 h-9 rounded-full shadow overflow-hidden">
                {% if app.user.avatarPath %}
                    <img src="{{ asset(app.user.avatarPath) }}" alt="Avatar">
                {% else %}
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1"
                         stroke="currentColor" class="w-9 h-9">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M17.982 18.725A7.488 7.488 0 0012 15.75a7.488 7.488 0 00-5.982 2.975m11.963 0a9 9 0 10-11.963 0m11.963 0A8.966 8.966 0 0112 21a8.966 8.966 0 01-5.982-2.275M15 9.75a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                {% endif %}
                </div>
                <div id="dropdown" class="relative">
                    <button id="toggleDropdown">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2"
                             stroke="currentColor" class="w-4 h-4">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M19.5 8.25l-7.5 7.5-7.5-7.5"/>
                        </svg>
                    </button>
                    <div id="dropdownMenu"
                         class="absolute top-9 right-0 w-36 overflow-hidden rounded border shadow-md bg-white hidden z-10">
                        <a href="{{ path('app_profile') }}"
                           class="flex items-center gap-2 px-3 py-3 hover:bg-gray-300">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                 stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                      d="M17.982 18.725A7.488 7.488 0 0012 15.75a7.488 7.488 0 00-5.982 2.975m11.963 0a9 9 0 10-11.963 0m11.963 0A8.966 8.966 0 0112 21a8.966 8.966 0 01-5.982-2.275M15 9.75a3 3 0 11-6 0 3 3 0 016 0z"/>
                            </svg>
                            <p>Profile</p>
                        </a>
                        <div class="h-[0.05rem] bg-gray-300 rounded-full"></div>
                        <a href="{{ path('app_logout') }}"
                           class="flex items-center gap-2 px-3 py-3 hover:bg-gray-300">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                 stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                      d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15M12 9l-3 3m0 0l3 3m-3-3h12.75"/>
                            </svg>
                            <p>Logout</p>
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <a href="{{ path('app_login') }}">Log in</a>
        {% endif %}
    </div>
</nav>