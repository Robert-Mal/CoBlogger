{% extends 'base.html.twig' %}

{% block title %}{{ user.username }}{% endblock %}

{% block body %}
    {% include '_shared/_includes/navbar.html.twig' %}
    <div class="flex flex-col gap-10 px-24 pt-10 font-poppins">
        <div class="flex justify-between items-center w-full">
            <div class="flex items-center gap-5">
                <div class="h-24 w-24 rounded-full shadow overflow-hidden">
                    {% if user.avatarPath %}
                        <img src="{{ asset(user.avatarPath) }}" alt="Avatar">
                    {% else %}
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1"
                             stroke="currentColor" class="w-full h-full">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M17.982 18.725A7.488 7.488 0 0012 15.75a7.488 7.488 0 00-5.982 2.975m11.963 0a9 9 0 10-11.963 0m11.963 0A8.966 8.966 0 0112 21a8.966 8.966 0 01-5.982-2.275M15 9.75a3 3 0 11-6 0 3 3 0 016 0z"/>
                        </svg>
                    {% endif %}
                </div>
                <p class="font-semibold text-3xl">@{{ user.username }}</p>
            </div>
            {% if app.user %}
                <div>
                    <button class="follow-button px-3 py-2 rounded-full shadow hover:bg-gray-200" data-user="{{ user.id }}">
                        {% if isFollowed %}
                            Unfollow
                        {% else %}
                            Follow
                        {% endif %}
                    </button>
                </div>
            {% endif %}
        </div>
        <div>
            {% include 'dashboard/_includes/post-swiper.html.twig' with {'section_title': 'posts', 'posts': posts} %}
        </div>
    </div>
{% endblock %}